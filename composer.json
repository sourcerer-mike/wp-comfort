    "phpunit/phpunit": "4.8.*",
    "sami/sami": "3.1.*",
    "sourcerer-mike/phpsemver": "2.1.2",
    "sourcerer-mike/phpspec-wordpress": "dev-master",
    "wp-cli/wp-cli": "*"
